rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Messages collection
    // - Anyone can create messages (contact form submissions)
    // - Anyone can read/update/delete (admin check is done in application code)
    match /messages/{messageId} {
      allow create, read, update, delete: if true;
    }

    // Blog posts collection
    // - Anyone can read blog posts (public viewing)
    // - Anyone can create/update/delete (admin check is done in application code)
    match /blogPosts/{postId} {
      allow read, create, update, delete: if true;
    }
  }
}
